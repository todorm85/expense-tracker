@model ExpandableMonthModel

<div class="row border border-primary alert-primary">
    <div class="col text-left">
        <button class="btn btn-link text-left" type="button" onclick="onToggleElement('@("month__" + Model.Month.ToString("MM_yy"))')">
            <h4 style="min-width:10em">@(Model.Month.ToString("yyyy MMMM"))</h4>
        </button>
        <h5 class="d-inline-block">
            <partial name="_Summary" model="new decimal[] { Model.TotalExpenses, Model.TotalIncome, Model.Balance }" />
        </h5>
    </div>
</div>

<div class="row border border-secondary alert-secondary" id="@("month__" + Model.Month.ToString("MM_yy"))" style="display: none">
    <div class="col text-left">
        @for (int ci = 0; ci < Model.Count; ci++)
        {
            var currentCategoryKey = ExpandableMonthModel.GetCategoryKey(Model[ci].CategoryName);
            Model[ci].Id = "category__" + Model.Month.ToString("MM_yy__") + currentCategoryKey;

            <partial name="_ExpandableCategory" for="@Model[ci]" />
        }
    </div>
</div>