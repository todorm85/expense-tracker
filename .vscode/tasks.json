{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Predebug",
      "dependsOn": [
        "Ensure debug port",
        "Build"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/ExpenseTracker.Web/ExpenseTracker.Web.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Ensure debug port",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/scripts/stop-processOnDebugPort.ps1",
      ],
      "problemMatcher": []
    },
    {
      "label": "Publish",
      "command": "dotnet",
      "type": "process",
      "args": [
      "publish",
      "${workspaceFolder}/ExpenseTracker.Web/ExpenseTracker.Web.csproj",
      "/p:PublishProfile=FolderProfile",
      "/p:PublishDir=C:\\web\\expenses\\"
      ],
      "problemMatcher": "$msCompile"
    },
  ]
}